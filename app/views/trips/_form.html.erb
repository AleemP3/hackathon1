<%= form_with(model: @trip, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Name" %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, required: true, placeholder: "Details about your trip..." %>
  </div>
  <%= f.submit class: "ui green button" %>
  <% end %> 