<%= form_with(model: [@location, @address], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country, required: true, placeholder: "Country" %>
  </div>
  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state, required: true, placeholder: "State" %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, required: true, placeholder: "City" %>
  </div>
  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street, required: true, placeholder: "Street" %>
  </div>
  <%= f.submit class: "ui green button" %>
  <% end %> 